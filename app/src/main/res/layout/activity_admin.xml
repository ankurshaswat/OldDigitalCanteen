<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jsr268client.Admin"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ACCOUNT SECTION"
        android:id="@+id/textView11"
        android:textColor="#e8d9ff"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/date_1"
        android:textSize="30dp"
        android:layout_marginBottom="157dp"
        android:layout_alignTop="@+id/number_1" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Change Date"
        android:id="@+id/change_1"
        android:background="#23297A"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Data not available"
        android:id="@+id/number_1"
        android:textIsSelectable="false"
        android:textSize="30dp"
        android:layout_below="@+id/textView16"
        android:layout_toRightOf="@+id/button5"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Exit"
        android:id="@+id/button5"
        android:background="#f61e1e"
        android:onClick="home"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/textView14"
        android:textSize="40dp"
        android:textColor="#23297A"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="83dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="People Coming"
        android:id="@+id/textView16"
        android:textSize="40dp"
        android:textColor="#23297A"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Backup Data"
        android:background="@android:color/holo_green_dark"
        android:id="@+id/button4"
        android:layout_marginTop="90dp"
        android:onClick="sending"
        android:layout_below="@+id/change_1"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Manage Menu "
        android:id="@+id/button7"
        android:onClick="open"
        android:layout_alignTop="@+id/button4"
        android:layout_alignRight="@+id/textView16"
        android:background="@drawable/newbutton" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Accounts"
        android:id="@+id/button9"
        android:onClick="openacc"
        android:layout_alignTop="@+id/button7"
        android:layout_centerHorizontal="true"
        android:background="#23297A"
        android:textColor="#ffffff" />

</RelativeLayout>
