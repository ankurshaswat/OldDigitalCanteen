<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.jsr268client.Splash"
    android:background="@drawable/bg">
<!--android:background="@color/bright_foreground_disabled_material_light">  -->

<TextView
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="S E N I O R    S T A F F"
    android:id="@+id/textView7"
    android:textSize="50dp"
    android:textColor="#23297A"
    android:layout_above="@+id/textView8"
    android:layout_centerHorizontal="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="L U N C H      C L U B"
    android:id="@+id/textView8"
    android:textColor="#ffffff"
    android:textSize="40dp"
    android:textStyle="bold"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="190dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="I I T    D E L H I"
        android:id="@+id/textView12"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_marginBottom="70dp"
        android:src="@drawable/iitd_logo"
        android:layout_above="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp" />
</RelativeLayout>
