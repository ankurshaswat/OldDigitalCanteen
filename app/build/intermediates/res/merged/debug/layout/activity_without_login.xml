<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jsr268client.MainPage"
    style="@style/AppTheme"
    android:background="@drawable/bg">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What Will You Like to Order?"
        android:id="@+id/what"
        android:textSize="30dp"
        android:textColor="#23297A"
        android:layout_below="@+id/vi_date"
        android:layout_toRightOf="@+id/vi_date"
        android:layout_marginTop="100dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome "
        android:id="@+id/edi"
        android:textSize="30dp"
        android:textColor="#23297A"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/exi" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:id="@+id/exi"
        android:background="#ff0000"
        android:width="300dp"
        android:height="60dp"
        android:textSize="30dp"
        android:textColor="#ffffff"

        android:onClick="logout"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:text="Lunch"
        android:id="@+id/menu11"
        android:background="@xml/style5"

        android:width="200dp"
        android:height="70dp"
        android:textSize="30dp"
        android:textColor="#154a72"
        android:onClick="clicked1"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/account_balance" />

    <Button
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:text="Lunch With Fruits"
        android:id="@+id/menu22"
        android:height="70dp"
        android:background="@xml/style5"
        android:width="200dp"
        android:textSize="30dp"
        android:textColor="#154a72"
        android:onClick="clicked2"
        android:layout_below="@+id/menu11"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp" />

    <Button
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:text="Tea"
        android:id="@+id/menu33"
        android:background="@xml/style1"
        android:width="200dp"
        android:height="70dp"
        android:layout_below="@+id/menu22"
        android:layout_alignLeft="@+id/menu22"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textColor="#154a72"
        android:onClick="clicked3" />







    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/subm"
        android:background="@android:color/holo_green_dark"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:onClick="submit"
        android:nestedScrollingEnabled="false"
        android:layout_alignTop="@+id/exi"
        android:layout_toRightOf="@+id/menu44"
        android:height="60dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/money1"
        android:background="@drawable/round_button"
        android:layout_below="@+id/what"
        android:layout_toRightOf="@+id/what"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="280dp"
        android:layout_height="65dp"
        android:text="Coffee"
        android:id="@+id/menu44"
        android:background="@xml/style1"
        android:width="200dp"
        android:height="70dp"
        android:textSize="30dp"
        android:textColor="#154a72"
        android:onClick="clicked4"
        android:layout_below="@+id/menu33"
        android:layout_alignLeft="@+id/menu33"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p1"
        android:layout_above="@+id/menu22"
        android:layout_alignParentLeft="true"
        android:width="60dp"
        android:background="@drawable/plus3"
        android:layout_alignTop="@+id/menu11"
        android:layout_toLeftOf="@+id/menu33"
        android:layout_marginLeft="10dp"
        android:onClick="increase1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/m1"
        android:background="@drawable/mi"
        android:layout_above="@+id/menu22"
        android:layout_toRightOf="@+id/menu11"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/menu11"
        android:layout_marginTop="10dp"
        android:onClick="decrease1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qu1"
        android:layout_alignTop="@+id/menu11"
        android:layout_toRightOf="@+id/m1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"

        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p2"
        android:width="60dp"
        android:background="@drawable/plus3"
        android:layout_alignTop="@+id/menu22"
        android:layout_alignBottom="@+id/menu22"
        android:layout_alignRight="@+id/p1"
        android:layout_marginLeft="10dp"
        android:onClick="increase2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p3"
        android:width="60dp"
        android:background="@drawable/plus3"
        android:layout_alignTop="@+id/menu33"
        android:layout_alignBottom="@+id/menu33"
        android:layout_alignRight="@+id/p2"
        android:layout_marginLeft="10dp"
        android:onClick="increase3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/p4"
        android:width="60dp"
        android:background="@drawable/plus3"
        android:layout_alignTop="@+id/menu44"
        android:layout_alignBottom="@+id/menu44"
        android:layout_alignRight="@+id/p3"
        android:layout_marginLeft="10dp"
        android:onClick="increase4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/m2"
        android:background="@drawable/mi"
        android:layout_alignTop="@+id/menu22"
        android:layout_toRightOf="@+id/menu22"
        android:layout_toLeftOf="@+id/qu1"
        android:layout_alignBottom="@+id/menu22"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="decrease2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/m3"
        android:background="@drawable/mi"
        android:layout_alignTop="@+id/menu33"
        android:layout_toRightOf="@+id/menu33"
        android:layout_alignBottom="@+id/menu33"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="decrease3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/m4"
        android:background="@drawable/mi"
        android:layout_alignTop="@+id/menu44"
        android:layout_toRightOf="@+id/menu44"
        android:layout_alignBottom="@+id/menu44"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="decrease4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qu2"

        android:layout_alignTop="@+id/m2"
        android:layout_alignLeft="@+id/qu1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qu3"

        android:layout_alignTop="@+id/m3"
        android:layout_alignLeft="@+id/qu2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qu4"

        android:layout_alignTop="@+id/m4"
        android:layout_alignLeft="@+id/qu3" />
</RelativeLayout>
